# Parkview CMA React App - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================
# Get this from: Supabase Dashboard > Settings > Database > Connection string (Session pooler)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# =============================================================================
# Frontend URL (for CORS - set after deploying to Vercel)
# =============================================================================
FRONTEND_URL=https://your-app.vercel.app

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# =============================================================================
# Super User (admin who can trigger quarterly assumption refreshes)
# =============================================================================
SUPER_USER_EMAIL=

# =============================================================================
# Anthropic Claude API Key (for AI-powered assumption research)
# =============================================================================
ANTHROPIC_API_KEY=

# =============================================================================
# Supabase (for dynamic defaults storage)
# =============================================================================
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
